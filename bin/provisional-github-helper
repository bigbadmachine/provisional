#!/usr/bin/env ruby

require 'net/http'
require 'yaml'

repository_name = ARGV[0]

Net::HTTP.post_form URI.parse('http://github.com/repositories'), {
  # TODO: figure out a better way of getting this
  'login' => `git config --get github.user`.chomp,
  'token' => `git config --get github.token`.chomp,
  'repository[name]' => repository_name,
  'repository[description]' => repository_name
}
