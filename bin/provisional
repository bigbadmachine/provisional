#!/usr/bin/env ruby

require 'rubygems'
require 'provisional'
require 'provisional/version'
require 'trollop'

options = Trollop::options do
  version "Provisional #{Provisional::Version}"
  opt :name, "Name of the project", :type => String
  opt :scm, "SCM to use", :type => String, :default => 'git'
  opt :rails, "Path to rails generator script", :type => String, :default => `which rails`.chomp
  opt :template, "Rails template to use", :type => String, :default => 'viget'
  opt :github_login, "Github login (only needed for github scm)", :type => String
  opt :github_password, "Github password (only needed for github scm)", :type => String
end

Provisional::Project.new(options)
